{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noEmit": true,
    "declaration": false,
    "outDir": "./never"
  },
  "include": ["**/*.d.ts", ".eslintrc.js", "commitlint.config.js"]
}
